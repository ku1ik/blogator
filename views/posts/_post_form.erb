<fieldset>
  <p>
    <label>Title:</label>
    <input type="text" name="post[title]" value="<%= @post.title %>" />
  </p>
  <% unless @post.new_record? %>
  <p>
    <label>Slug:</label>
    <input type="text" name="_slug" value="<%= @post.slug %>" readonly />
  </p>
  <% end %>
  <p>
    <label>Tags:</label>
    <input type="text" name="post[tag_list]" value="<%= @post.tag_list %>" />
  </p>
  <p>
    <label>Content:</label>
    <textarea name="post[body_source]" rows="32" cols="40"><%= @post.body_source %></textarea>
  </p>
  <% unless @post.published_at %>
  <p>
    <label>&nbsp;</label>
    <label class="checkbox"><input type="checkbox" name="post[published_at]" value="<%= DateTime.now %>" /> Publish</label>
  </p>
  <% end %>
  <p class="indented">
    <input type="submit" value="Submit" class="button" /> or <a href="/posts">Cancel</a>
  </p>
</fieldset>
